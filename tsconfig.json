{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["mocha", "node"],
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "include": [
    "types/**/*.d.ts",
    "tests/**/*.ts"
  ]
}
