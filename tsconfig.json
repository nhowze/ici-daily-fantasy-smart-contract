{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2015"],
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
